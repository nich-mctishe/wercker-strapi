{
  "connection": "default",
  "collectionName": "orders",
  "info": {
    "name": "orders",
    "description": "These are the orders customers have placed on your site"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "number": {
      "type": "string"
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "date-placed": {
      "type": "date"
    },
    "date-paid-for": {
      "type": "date"
    },
    "date-shipped": {
      "type": "date"
    },
    "instructions": {
      "type": "text"
    },
    "paid": {
      "type": "boolean"
    },
    "billing-address": {
      "type": "text",
      "required": true
    },
    "shipping-address": {
      "type": "text",
      "required": true
    },
    "firstname": {
      "type": "string",
      "required": true
    },
    "lastname": {
      "type": "string",
      "required": true
    },
    "stripe-token": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "contact-time": {
      "type": "string"
    },
    "shipped": {
      "type": "boolean"
    },
    "postaltrackingnumber": {
      "type": "string"
    },
    "deliveryoptions": {
      "model": "deliveryoptions"
    },
    "billingcountry": {
      "type": "string",
      "required": true
    },
    "subtotal": {
      "type": "decimal"
    },
    "shippingcountry": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "text"
    },
    "exceptions": {
      "type": "text"
    }
  }
}
