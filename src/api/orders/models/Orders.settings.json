{
  "connection": "default",
  "collectionName": "orders",
  "info": {
    "name": "orders",
    "description": "These are the orders customers have placed on your site"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "number": {
      "type": "string"
    },
    "cost": {
      "type": "decimal",
      "required": true
    },
    "date-placed": {
      "type": "date"
    },
    "date-paid-for": {
      "type": "date"
    },
    "date-shipped": {
      "type": "date"
    },
    "instructions": {
      "type": "text"
    },
    "paid": {
      "type": "boolean"
    },
    "items": {
      "collection": "items",
      "via": "order"
    },
    "billing-address": {
      "type": "text",
      "required": true
    },
    "shipping-address": {
      "type": "text",
      "required": true
    },
    "firstname": {
      "type": "string",
      "required": true
    },
    "lastname": {
      "type": "string",
      "required": true
    },
    "stripe-token": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "contact-time": {
      "type": "string"
    },
    "shipped": {
      "type": "boolean"
    }
  }
}