{
  "connection": "default",
  "collectionName": "items",
  "info": {
    "name": "items",
    "description": "These are the items that appear in your orders"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "product": {
      "model": "products"
    },
    "size": {
      "enum": [
        "S",
        "M",
        "L",
        "XL"
      ],
      "type": "enumeration",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "total-cost": {
      "type": "decimal"
    },
    "order": {
      "model": "orders",
      "via": "items"
    }
  }
}